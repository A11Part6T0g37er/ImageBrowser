<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImageBrowser.ViewModels"
     >
    <CollectionViewSource x:Key="FoldersViewTemplateCollection" x:Name="FoldersToView" Source="{Binding FoldersToDisplay}" IsSourceGrouped="False"/>
    <DataTemplate  x:Key="FoldersViewTemplate" x:Name="FoldersViewTemplate" 
                                    
                >
        <Grid Height="180" Width="320" AutomationProperties.Name="{Binding FoldersToDisplay}">
            <Image Source="Placeholder.png" Stretch="UniformToFill"/>
            <StackPanel Orientation="Vertical" Height="60" VerticalAlignment="Bottom" Background="{ThemeResource SystemBaseLowColor}" Padding="12">
                <TextBlock Text="{Binding FoldersToDisplay.Count}"/>
                <TextBlock Text="{Binding FoldersToDisplay.Count}" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
            </StackPanel>
        </Grid>
    </DataTemplate>
    
   
</ResourceDictionary>
